#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* head = nullptr; // Start of the list

// Insert at the end of the list
void insert(int value) {
    Node* newNode = new Node();
    newNode->data = value;
    newNode->next = nullptr;

    // If list is empty
    if (head == nullptr) {
        head = newNode;
        return;
    }

    // Traverse to last node
    Node* temp = head;
    while (temp->next != nullptr) {
        temp = temp->next;
    }

    temp->next = newNode;
}

// Delete first occurrence of a value
void remove(int value) {
    if (head == nullptr) {
        cout << "List is empty!" << endl;
        return;
    }

    // If value is at the head
    if (head->data == value) {
        Node* temp = head;
        head = head->next;
        delete temp;
        return;
    }

    // Search for the value
    Node* current = head;
    while (current->next != nullptr && current->next->data != value) {
        current = current->next;
    }

    // Value not found
    if (current->next == nullptr) {
        cout << "Value not found!" << endl;
        return;
    }

    // Delete the node
    Node* temp = current->next;
    current->next = current->next->next;
    delete temp;
}

// Display the list
void display() {
    if (head == nullptr) {
        cout << "List is empty!" << endl;
        return;
    }

    Node* temp = head;
    cout << "Linked List: ";
    while (temp != nullptr) {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

int main() {
    insert(10);
    insert(20);
    insert(30);

    display();  // Linked List: 10 20 30

    remove(20);
    display();  // Linked List: 10 30

    return 0;
}
